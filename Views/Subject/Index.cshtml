@model IEnumerable<projeto.Models.Subject>

@{
    ViewData["Title"] = "Matérias";
}

<h2>Matérias</h2>

<p>
    <a asp-action="Create">Cadastrar nova matéria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>Módulos</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Index" asp-controller="Module" asp-route-SubjectId="@item.Id">Ver módulos</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-SubjectId="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-SubjectId="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-SubjectId="@item.Id">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
